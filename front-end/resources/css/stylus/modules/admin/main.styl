#site-wrapper {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100vh;
}

#site-canvas {
  width: 100%;
  height: 100%;
  position: relative;
  backface-visibility: hidden;
  transform: translate3d(0);
  transition: .3s ease all;
  padding: 5% 0; /* Temp: Just spacing. */
  .toggle-nav {
    position: absolute;
    left: 10px;
    top: 10px;
  }
}

#site-menu {
  width: 200px;
  height: 100%;
  position: fixed;
  top: 0;
  left: -200px;
  background: #34495e;
  padding: 15px;
  .menu {
    margin-top: 10px;
    padding: 0;
  }
}

#site-wrapper.show-nav #site-canvas {
  transform: translate3d(200px, 0, 0);
}
